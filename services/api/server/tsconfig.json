{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["aws-lambda", "node"]
  },
  "include": ["src/**/*.ts", "vitest.config.ts"],
  "exclude": ["dist"]
}
